;; test_bitwise.lisp - Tests for bitwise operations

;; Bitwise AND
;; TEST: and of same value
;; EXPECT: 5
(bit-and 5 5)

;; TEST: and with zero
;; EXPECT: 0
(bit-and 5 0)

;; TEST: and of 12 (1100) and 10 (1010) = 8 (1000)
;; EXPECT: 8
(bit-and 12 10)

;; Bitwise OR
;; TEST: or with zero
;; EXPECT: 5
(bit-or 5 0)

;; TEST: or of 12 (1100) and 10 (1010) = 14 (1110)
;; EXPECT: 14
(bit-or 12 10)

;; Bitwise XOR
;; TEST: xor of same value = 0
;; EXPECT: 0
(bit-xor 5 5)

;; TEST: xor of 12 (1100) and 10 (1010) = 6 (0110)
;; EXPECT: 6
(bit-xor 12 10)

;; Bitwise NOT
;; TEST: not of 0 (returns unsigned 2^32 - 1)
;; EXPECT: 4294967295
(bit-not 0)

;; Left shift
;; TEST: 1 << 3 = 8
;; EXPECT: 8
(bit-shift 1 3)

;; TEST: 5 << 2 = 20
;; EXPECT: 20
(bit-shift 5 2)

;; Right shift (negative shift amount)
;; TEST: 8 >> 2 = 2
;; EXPECT: 2
(bit-shift 8 -2)
