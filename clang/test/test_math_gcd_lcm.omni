;; test_math_gcd_lcm.lisp - Tests for GCD and LCM

;; GCD using Euclidean algorithm
(define gcd [a] [b]
  (if (= b 0)
    a
    (gcd b (% a b))))

;; TEST: gcd of coprime numbers
;; EXPECT: 1
(gcd 7 11)

;; TEST: gcd with common factor
;; EXPECT: 6
(gcd 12 18)

;; TEST: gcd where one divides other
;; EXPECT: 5
(gcd 15 5)

;; TEST: gcd same numbers
;; EXPECT: 7
(gcd 7 7)

;; LCM using GCD
(define lcm [a] [b]
  (/ (* a b) (gcd a b)))

;; TEST: lcm of coprime numbers
;; EXPECT: 77
(lcm 7 11)

;; TEST: lcm with common factor
;; EXPECT: 36
(lcm 12 18)

;; TEST: lcm where one divides other
;; EXPECT: 15
(lcm 15 5)

;; TEST: lcm same numbers
;; EXPECT: 7
(lcm 7 7)
