;; test_type_pred_string.lisp - Tests for string and char predicates

;; TEST: string? with string
;; EXPECT: true
(string? "hello")

;; TEST: string? with empty string
;; EXPECT: true
(string? "")

;; TEST: string? with int
;; EXPECT: false
(string? 42)

;; TEST: string? with list
;; EXPECT: false
(string? '("a" "b"))

;; TEST: string? with nil
;; EXPECT: false
(string? nil)

;; Char is a single-character string
(define char? [x]
  (and (string? x) (= (str-len x) 1)))

;; TEST: char? single char
;; EXPECT: true
(char? "a")

;; TEST: char? multi char
;; EXPECT: false
(char? "ab")

;; TEST: char? empty
;; EXPECT: false
(char? "")

;; TEST: char? space
;; EXPECT: true
(char? " ")

;; String predicates
(define blank? [s]
  (or (nil? s) (= (str-trim s) "")))

;; TEST: blank? empty string
;; EXPECT: true
(blank? "")

;; TEST: blank? whitespace only
;; EXPECT: true
(blank? "   ")

;; TEST: blank? with content
;; EXPECT: false
(blank? "hello")

;; TEST: blank? nil
;; EXPECT: true
(blank? nil)
