;; test_not.lisp - Tests for boolean negation

;; Basic not
;; TEST: not true
;; EXPECT: false
(not true)

;; TEST: not false
;; EXPECT: true
(not false)

;; Not with expressions
;; TEST: not with comparison (5 > 3 is true, so not is false)
;; EXPECT: false
(not (> 5 3))

;; TEST: not with comparison (5 < 3 is false, so not is true)
;; EXPECT: true
(not (< 5 3))

;; Double negation
;; TEST: not not true
;; EXPECT: true
(not (not true))

;; TEST: not not false
;; EXPECT: false
(not (not false))

;; Not in conditional context
(define is-zero [x]
  (not (!= x 0)))

;; TEST: is-zero of 0
;; EXPECT: true
(is-zero 0)

;; TEST: is-zero of non-zero
;; EXPECT: false
(is-zero 5)
