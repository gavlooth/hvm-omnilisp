;; test_cond.lisp - Tests for multi-way cond conditional

;; Basic cond
(define grade [score]
  (cond
    ((>= score 90) "A")
    ((>= score 80) "B")
    ((>= score 70) "C")
    ((>= score 60) "D")
    (true          "F")))

;; TEST: grade A
;; EXPECT: "A"
(grade 95)

;; TEST: grade B
;; EXPECT: "B"
(grade 85)

;; TEST: grade C
;; EXPECT: "C"
(grade 75)

;; TEST: grade F
;; EXPECT: "F"
(grade 50)

;; Cond with else
(define fizzbuzz [n]
  (cond
    ((= (% n 15) 0) "FizzBuzz")
    ((= (% n 3) 0)  "Fizz")
    ((= (% n 5) 0)  "Buzz")
    (else           n)))

;; TEST: fizzbuzz 15
;; EXPECT: "FizzBuzz"
(fizzbuzz 15)

;; TEST: fizzbuzz 9
;; EXPECT: "Fizz"
(fizzbuzz 9)

;; TEST: fizzbuzz 10
;; EXPECT: "Buzz"
(fizzbuzz 10)

;; TEST: fizzbuzz 7
;; EXPECT: 7
(fizzbuzz 7)
