;; test_math_abs.lisp - Tests for abs and sign functions

;; Absolute value
;; TEST: abs of positive
;; EXPECT: 5
(abs 5)

;; TEST: abs of negative
;; EXPECT: 5
(abs -5)

;; TEST: abs of zero
;; EXPECT: 0
(abs 0)

;; Sign function
;; TEST: sign of positive
;; EXPECT: 1
(sign 42)

;; TEST: sign of negative
;; EXPECT: -1
(sign -42)

;; TEST: sign of zero
;; EXPECT: 0
(sign 0)

;; Combined usage
(define normalize [x]
  (if (= x 0)
    0
    (* (sign x) 1)))

;; TEST: normalize positive
;; EXPECT: 1
(normalize 100)

;; TEST: normalize negative
;; EXPECT: -1
(normalize -100)
