// Test @omni_eval_handlers call inside #Hdle case

@list_len = λ&lst.
  λ{#NIL: 0; #CON: λ&h. λ&t. (1 + @list_len(t))}(lst)

@omni_eval_one_handler = λ&menv. λ&h.
  λ{
    #HDef: λ&tag. λ&fn_expr. #Hdlr{tag, fn_expr}
    _: λ&u_. h
  }(h)

@omni_eval_handlers = λ&menv. λ&hdlrs.
  λ{
    #NIL: #NIL
    #CON: λ&h. λ&t.
      (λ&evaluated_h. #CON{evaluated_h, @omni_eval_handlers(menv)(t)})(@omni_eval_one_handler(menv)(h))
  }(hdlrs)

@menv_empty = #MEnv{#NIL, #NIL, #Noth, 0}

// Test calling @omni_eval_handlers inside #Hdle case
@test_cps = λ&m. λ&exp. λ&k.
  !!&menv = m; !!&kont = k; !!&e = exp;
  λ{#MEnv: λ&env. λ&handlers. λ&parent. λ&level.
    λ{
      #Hdle: λ&hdlrs. λ&body.
        // Step 1: Just check raw lengths
        !!&hdlrs_len = @list_len(hdlrs);
        !!&handlers_len = @list_len(handlers);

        // Step 2: Create new menv
        !!&new_menv = #MEnv{env, handlers, parent, level};

        // Step 3: Call omni_eval_handlers
        !!&evaluated = @omni_eval_handlers(new_menv)(hdlrs);
        !!&eval_len = @list_len(evaluated);

        #Test{
          #hdlrs{hdlrs_len},
          #handlers{handlers_len},
          #evaluated{eval_len}
        }
      _: λ&u_. #Other{}
    }(e)
  }(menv)

@handler_def = #HDef{7522834, 99}
@hdlrs = #CON{@handler_def, #NIL}
@body = #Perf{0, 0}
@expr = #Hdle{@hdlrs, @body}

@test = @test_cps(@menv_empty)(@expr)(λ&v. v)

@main = @test
