// Debug test for handler invocation

@menv_empty = #MEnv{#NIL, #NIL, #Noth, 0}

@omni_env_extend = λ&env. λ&arg. #CON{arg, env}
@omni_menv_extend = λ&menv. λ&new_env.
  λ{#MEnv: λ&e. λ&h. λ&p. λ&l. #MEnv{new_env, h, p, l}}(menv)

// Minimal @omni_eval that handles #Lam and #Cst
@mock_eval = λ&menv. λ&exp.
  λ{#MEnv: λ&env. λ&cur_h. λ&cur_p. λ&cur_l.
    λ{
      #Lam: λ&body. #Clo{env, body}
      #Cst: λ&n. #Cst{n}
      _: λ&u. exp
    }(exp)
  }(menv)

// Minimal @omni_apply
@mock_apply = λ&menv. λ&fn. λ&arg.
  !!&fn_forced = fn;
  λ{
    #Clo: λ&env. λ&body.
      (λ&new_env.
        (λ&new_menv. @mock_eval(new_menv)(body))(@omni_menv_extend(menv)(new_env))
      )(@omni_env_extend(env)(arg))
    #Kont: λ&k. (k(arg))
    _: λ&u. #OtherFn{fn_forced}
  }(fn_forced)

// Simulate @omni_eval_one_handler
@eval_handler = λ&menv. λ&h.
  λ{
    #HDef: λ&tag. λ&fn_expr.
      (λ&handler_fn. #Hdlr{tag, handler_fn})(@mock_eval(menv)(fn_expr))
    _: λ&u. h
  }(h)

// The handler definition from compiler output
@hdef = #HDef{7522834, #Lam{#Lam{#Cst{999}}}}

// Test 1: Evaluate handler definition
@evaluated_handler = @eval_handler(@menv_empty)(@hdef)

// Test 2: Extract handler function
@hfn = λ{#Hdlr: λ&tag. λ&fn. fn}(@evaluated_handler)

// Test 3: Apply handler to payload
@payload = #Cst{5}
@partial = @mock_apply(@menv_empty)(@hfn)(@payload)

// Test 4: Apply partial to resume
@resume = #Kont{λ&x. x}
@result = @mock_apply(@menv_empty)(@partial)(@resume)

@main = #CON{@evaluated_handler, #CON{@hfn, #CON{@partial, #CON{@result, #NIL}}}}
